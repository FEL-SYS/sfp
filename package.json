	"scripts": {
		"start": "nx serve",
		"build": "nx build",
		"test": "nx test",
		"dev:koa:syncdb": "(cd apps/koa-app && npx prisma migrate dev && npx prisma generate)",
		"dev:auth:syncdb": "(cd apps/auth-app && npx prisma migrate dev && npx prisma generate)",
		"dev:sample:syncdb": "(cd apps/sample-app && npx prisma migrate dev && npx prisma generate)",
		"dev:auth": "nx serve auth-app && npm run swagger:auth",
		"dev:koa": "nx serve koa-app && npm run swagger:koa",
		"swagger:koa": "npx tsoa spec --configuration apps/koa-app/tsoa.json",
		"swagger:auth": "npx tsoa spec --configuration apps/auth-app/tsoa.json",
		"swagger:sample": "npx tsoa spec --configuration apps/sample-app/tsoa.json",
		"prepare": "husky install"
	},
	"private": true,
